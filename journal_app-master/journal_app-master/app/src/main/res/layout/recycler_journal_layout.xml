<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="@color/grey_20"
    android:background="@drawable/rounded_corner">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/journal_title_text_view"
        android:text="Journal title"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginVertical="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/journal_content_text_view"
        android:text="this can be journal content that can be long"
        android:maxLines="2"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:textSize="17sp"
        android:layout_marginVertical="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/journal_timestamp_text_view"
        android:text="note title"
        android:textColor="@color/grey_80"
        android:textSize="12sp"
        android:gravity="right"
        android:layout_marginVertical="4dp" />

</LinearLayout>